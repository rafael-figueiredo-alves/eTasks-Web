@inherits AppBarBase

<TopBar isDarkMode="@IsDarkMode">
    <Brand ColorAppName="@Components.ColorPallete.GetColor(Components.Cor.Primary, IsDarkMode)" AppName="@AppName" />
    <TitleBar isDarkMode="@IsDarkMode" Title="@PageTitle" />
    <ButtonBar Botoes="Botoes" AvatarOffcanvasMenuID="#AvatarMenu" AvatarPath="" isDarkMode="@IsDarkMode" />
</TopBar>

<MainMenu IsDarkMode="@IsDarkMode" />
<AvatarMenu IsDarkMode="@IsDarkMode" OnChangeThemeClick="OnChangeThemeClick" 
                                     OnChangeLanguageClick="OnChangeLanguageClick"
                                     OnConquerClick="OnConquerClick"
                                     OnLogoutClick="OnLogoutClick"
                                     OnChangePasswordClick="OnChangePasswordClick"
                                     OnSetupClick="OnSetupClick"
                                     OnShowAboutClick="OnShowAboutClick"
                                     OnShowProfileClick="OnShowProfileClick"/>

<PageTitleBar isDarkMode="@IsDarkMode" Title="@PageTitle" />