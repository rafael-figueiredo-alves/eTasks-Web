@inherits MainMenuBase

<Offcanvas OffcanvasID="MainMenu" isDarkMode="@IsDarkMode">
    <div class="offcanvas-header" style="margin-top: 5px; height: 40px;">
        <img class="user-select-none" src="@CloseButton" height="20" width="20" style="margin: 10px; margin-left: 5px; cursor: pointer;" data-bs-dismiss="offcanvas" />
        <div class="container" style="text-align: center">
            <h3 class="user-select-none" style="font-size: 28px; color: @Components.ColorPallete.GetColor(Components.Cor.Primary, IsDarkMode); margin-top: 10px;">Menu</h3>
        </div>
    </div>
    <div style="@($"border: 2px solid {Components.ColorPallete.GetColor(Components.Cor.Primary, IsDarkMode)}; box-shadow: 2px 4px 4px rgba(100,100,100,0.5); height: 1px; margin-left: 5%; margin-right: 5%")" />

    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@InicioSelected" ItemName="Inicio" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Home)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@TarefasSelected" ItemType="MainMenuItemType.Tasks" ItemName="Tarefas" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Tasks)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@MetasSelected" ItemType="MainMenuItemType.Goals" ItemName="Metas" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Goals)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@ComprasSelected" ItemType="MainMenuItemType.Shopping" ItemName="Compras" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Shopping)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@LeiturasSelected" ItemType="MainMenuItemType.Readings" ItemName="Leituras" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Readings)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@AnotacoesSelected" ItemType="MainMenuItemType.Notes" ItemName="Anotações" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Notes)" />
    <MainMenuItem IsDarkMode="@IsDarkMode" Selected="@FinancasSelected" ItemType="MainMenuItemType.Finance" ItemName="Finanças" OnClick="async () => await MainMenuItemClick(MainMenuItemType.Finance)" />
</Offcanvas>