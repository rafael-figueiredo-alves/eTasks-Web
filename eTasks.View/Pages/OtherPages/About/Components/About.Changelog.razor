@using eTasks.Components.Enums
@using eTranslate.Interfaces


<div class="changelog-container">
    <h3 class="changelog-title" style="color: @CorTitles">Histórico de versão</h3>
    <div class="changelog" style="border: 2px solid @CorTitles;">
        <p style="color: @CorText;">
            <strong style="color: @CorTitles">14/07/2025 - versão 2.0.1</strong><br />
            - Implementado recurso Minha Leitura<br />
            - Realizados ajustes gráficos na interface<br />
            - Solucionados bugs no login
        </p>
        <p style="color: @CorText;">
            <strong style="color: @CorTitles">25/12/2024 - versão 2.0.0</strong><br />
            - Lançamento da versão 2.
        </p>
    </div>
</div>

@code {
    #region Serviço injetado
    [Inject] public IeTranslate? ETranslate { get; set; }
    #endregion

    [Parameter]
    public bool isDarkTheme { get; set; } = false;

    private string CorTitles { get; set; } = string.Empty;
    private string CorText { get; set; } = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        CorTitles = ColorPallete.GetColor(Cor.Primary, isDarkTheme);
        CorText = ColorPallete.GetColor(Cor.Secondary, isDarkTheme);

        //Dedicatoria = $"{await ETranslate!.Translate(TranslateKeyConsts.Titles_HomePage)} {AppVersion}";
    }
}
